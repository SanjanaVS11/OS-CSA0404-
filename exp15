#include <stdio.h>

int main() {
    int files[50], start[50], length[50];
    int n;

    printf("Enter number of files: ");
    scanf("%d", &n);

    for(int i = 0; i < n; i++) {
        printf("\nEnter starting block of file %d: ", i + 1);
        scanf("%d", &start[i]);

        printf("Enter number of blocks for file %d: ", i + 1);
        scanf("%d", &length[i]);

        // Store allocated blocks
        for(int j = 0; j < length[i]; j++) {
            files[start[i] + j] = i + 1;
        }
    }

    printf("\nFile Allocation Table\n");
    printf("File No\tStart Block\tLength\n");

    for(int i = 0; i < n; i++) {
        printf("%d\t%d\t\t%d\n", i + 1, start[i], length[i]);
    }

    printf("\nBlock Allocation\n");
    for(int i = 0; i < 50; i++) {
        if(files[i] != 0)
            printf("Block %d -> File %d\n", i, files[i]);
    }

    return 0;
}
