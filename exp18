#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, diskSize, totalMovement = 0;
    int requests[50], temp;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter disk request sequence:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &requests[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter total disk size: ");
    scanf("%d", &diskSize);

    // Sort the request array
    for(int i = 0; i < n - 1; i++) {
        for(int j = i + 1; j < n; j++) {
            if(requests[i] > requests[j]) {
                temp = requests[i];
                requests[i] = requests[j];
                requests[j] = temp;
            }
        }
    }

    int pos;
    for(pos = 0; pos < n; pos++) {
        if(requests[pos] > head)
            break;
    }

    printf("\nDisk Head Movement (SCAN)\n");

    // Move towards higher end
    for(int i = pos; i < n; i++) {
        totalMovement += abs(head - requests[i]);
        printf("%d -> %d = %d\n", head, requests[i], abs(head - requests[i]));
        head = requests[i];
    }

    // Move to end of disk
    totalMovement += abs(head - (diskSize - 1));
    printf("%d -> %d = %d\n", head, diskSize - 1, abs(head - (diskSize - 1)));
    head = diskSize - 1;

    // Move towards lower end
    for(int i = pos - 1; i >= 0; i--) {
        totalMovement += abs(head - requests[i]);
        printf("%d -> %d = %d\n", head, requests[i], abs(head - requests[i]));
        head = requests[i];
    }

    printf("\nTotal Head Movement = %d\n", totalMovement);
    return 0;
}
