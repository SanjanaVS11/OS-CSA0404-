#include <stdio.h>

int main() {
    int pages[50], frames[10];
    int n, f, pageFaults = 0;
    int found, pos, farthest, index;

    printf("Enter number of pages: ");
    scanf("%d", &n);

    printf("Enter page reference string:\n");
    for(int i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    printf("Enter number of frames: ");
    scanf("%d", &f);

    // Initialize frames
    for(int i = 0; i < f; i++)
        frames[i] = -1;

    printf("\nPage\tFrames\n");

    for(int i = 0; i < n; i++) {
        found = 0;

        // Check if page is already in frame
        for(int j = 0; j < f; j++) {
            if(frames[j] == pages[i]) {
                found = 1;
                break;
            }
        }

        // If page fault
        if(!found) {
            // Check for empty frame
            pos = -1;
            for(int j = 0; j < f; j++) {
                if(frames[j] == -1) {
                    pos = j;
                    break;
                }
            }

            // If no empty frame, find optimal page
            if(pos == -1) {
                farthest = -1;
                for(int j = 0; j < f; j++) {
                    for(index = i + 1; index < n; index++) {
                        if(frames[j] == pages[index])
                            break;
                    }

                    if(index == n) {
                        pos = j;
                        break;
                    }

                    if(index > farthest) {
                        farthest = index;
                        pos = j;
                    }
                }
            }

            frames[pos] = pages[i];
            pageFaults++;
        }

        // Display frames
        printf("%d\t", pages[i]);
        for(int j = 0; j < f; j++) {
            if(frames[j] != -1)
                printf("%d ", frames[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", pageFaults);
    return 0;
}
